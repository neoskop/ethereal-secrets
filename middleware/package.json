{
  "name": "@neoskop/ethereal-secrets-middleware",
  "version": "4.2.1",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "author": "Arne Diekmann <diekmann@neoskop.de>",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">= 12.4.0"
  },
  "repository": "https://bitbucket.org/neoskop/ethereal-secrets-middleware",
  "scripts": {
    "clean": "rimraf ./dist",
    "tsc": "tsc -p .",
    "build": "npm run clean; npm run tsc",
    "start": "jest --watchAll --runInBand",
    "test": "jest --runInBand --coverage"
  },
  "devDependencies": {
    "@types/body-parser": "1.19.6",
    "@types/cookie-parser": "1.4.10",
    "@types/express": "5.0.1",
    "@types/express-session": "1.18.2",
    "@types/jest": "30.0.0",
    "@types/supertest": "6.0.3",
    "@types/validator": "13.15.10",
    "concurrently": "9.2.1",
    "cookie-parser": "1.4.7",
    "jest": "30.2.0",
    "rimraf": "6.1.3",
    "supertest": "7.2.2",
    "ts-jest": "29.4.6",
    "ts-node": "10.9.2",
    "typescript": "5.9.3"
  },
  "dependencies": {
    "body-parser": "1.20.4",
    "connect-redis": "7.1.1",
    "deepmerge": "4.3.1",
    "express": "4.22.1",
    "express-session": "1.19.0",
    "ioredis": "5.10.0",
    "uuid": "10.0.0",
    "validator": "13.15.26"
  },
  "jest": {
    "preset": "ts-jest",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testMatch": [
      "<rootDir>/src/test/**/*.ts"
    ],
    "transform": {
      "^.+\\.(t|j)s$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.json"
        }
      ]
    },
    "coverageProvider": "v8",
    "coverageDirectory": "./coverage",
    "coverageReporters": [
      "lcov",
      "text-summary"
    ],
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/test/**"
    ]
  }
}
